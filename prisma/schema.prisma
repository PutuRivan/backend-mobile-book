generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  username  String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  reviews   Review[]   @relation("userHasReviews")
  Favorite  Favorite[]
}

model Book {
  id          String     @id // ID dari Google Books API
  title       String
  authors     String?
  thumbnail   String?
  description String?    @db.Text
  createdAt   DateTime
  updatedAt   DateTime   @updatedAt
  reviews     Review[]   @relation("bookHasReviews")
  Favorite    Favorite[]
}

model Review {
  id        String   @id @default(uuid())
  userId    String
  bookId    String
  comment   String?
  createdAt DateTime
  updatedAt DateTime @updatedAt

  user User @relation("userHasReviews", fields: [userId], references: [id])
  book Book @relation("bookHasReviews", fields: [bookId], references: [id])
}

model Favorite {
  id        String   @id @default(uuid())
  userId    String
  bookId    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  book Book @relation(fields: [bookId], references: [id])

  @@unique([userId, bookId])
}
